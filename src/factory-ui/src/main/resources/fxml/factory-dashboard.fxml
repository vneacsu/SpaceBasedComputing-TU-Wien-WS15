<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ws15.sbc.factory.ui.FactoryDashboardModel?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ws15.sbc.factory.ui.FactoryDashboardController">
    <fx:define>
        <FactoryDashboardModel fx:id="model"/>
    </fx:define>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <center>
            <ListView items="${model.rawComponents}" prefHeight="200.0" prefWidth="200.0"
                      BorderPane.alignment="CENTER"/>
        </center>
        <top>
            <Label text="Raw components inventory" BorderPane.alignment="CENTER"/>
        </top>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="0" GridPane.columnIndex="1">
        <top>
            <Label text="Processed components inventory" BorderPane.alignment="CENTER"/>
        </top>
        <center>
            <ListView items="${model.processedComponents}" prefHeight="200.0" prefWidth="200.0"
                      BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="0" GridPane.columnIndex="2">
        <top>
            <Label text="Drones inventory" BorderPane.alignment="CENTER"/>
        </top>
        <center>
            <ListView items="${model.drones}" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <top>
            <Label text="Calibrated drones inventory" BorderPane.alignment="CENTER"/>
        </top>
        <center>
            <ListView items="${model.calibratedDrones}" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <top>
            <Label text="Functional drones inventory" BorderPane.alignment="CENTER"/>
        </top>
        <center>
            <ListView items="${model.goodDrones}" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="2">
        <top>
            <Label text="Faulty drones inventory" BorderPane.alignment="CENTER"/>
        </top>
        <center>
            <ListView items="${model.badDrones}" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
</GridPane>
